{
  "private": true,
  "name": "contas-recorrentes",
  "author": "Guilherme Monte <gmonte@inf.ufsm.br>",
  "description": "Solution to schedule recurring payments reminders",
  "license": "MIT",
  "workspaces": {
    "packages": [
      "packages/*",
      "packages/server/functions"
    ]
  },
  "devDependencies": {
    "@contas-recorrentes/eslint-config": "*",
    "@commitlint/cli": "^8.3.5",
    "@commitlint/config-conventional": "^8.3.4",
    "@types/jest": "^26.0.9",
    "commitizen": "^4.0.3",
    "cz-lerna-changelog": "2.0.2",
    "husky": "^4.2.5",
    "jest": "^26.4.0",
    "lerna": "^3.22.1",
    "ts-jest": "^26.2.0",
    "typescript": "^3.9.7"
  },
  "scripts": {
    "lint": "lerna run --parallel lint --",
    "jest": "jest"
  },
  "husky": {
    "hooks": {
      "pre-commit": "yarn lint --quiet && yarn jest",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
      "prepare-commit-msg": "exec < /dev/tty && git cz --hook || true"
    }
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-lerna-changelog"
    }
  }
}
